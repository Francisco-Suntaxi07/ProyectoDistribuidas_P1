@model BlibliotecaApp.Models.ClienteModel
@{
    Layout = null;
    ViewBag.Title = "FormularioCliente";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FormularioCliente</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <h1 class="modal-title fs-5" id="exampleModalLabel">@ViewBag.Acction</h1>
        @using (Html.BeginForm("GuardarCliente", "Cliente", FormMethod.Post))
        {

            <div class="mb-3">
                <label class="form-label">Cédula del Cliente</label>
                @Html.TextBoxFor(Model => Model.id_cliente, new { @class = "form-control", maxlength = "10" })
            </div>

            <div class="mb-3">
                <label class="form-label">Nombres</label>
                @Html.TextBoxFor(Model => Model.nombre_cliente, new { @class = "form-control", maxlength = "64" })
            </div>

            <div class="mb-3">
                <label class="form-label">Edad</label>
                @Html.TextBoxFor(Model => Model.edad_cliente, new { @class = "form-control", type = "number", min = "1" })
            </div>

            <div class="mb-3">
                <label class="form-label">Direccion</label>
                @Html.TextBoxFor(Model => Model.direccion_cliente, new { @class = "form-control", maxlength = "64" })
            </div>

            <div class="mb-3">
                <label class="form-label">Telefono</label>
                @Html.TextBoxFor(Model => Model.telf_cliente, new { @class = "form-control", maxlength = "10" })
            </div>

            <div class="mb-3">
                <label class="form-label">Correo electronico</label>
                @Html.TextBoxFor(Model => Model.email_cliente, new { @class = "form-control", type = "email", maxlength = "64" })
            </div>

            <div class="container text-center">
                <button type="submit" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-floppy-fill" viewBox="0 0 16 16">
                        <path d="M0 1.5A1.5 1.5 0 0 1 1.5 0H3v5.5A1.5 1.5 0 0 0 4.5 7h7A1.5 1.5 0 0 0 13 5.5V0h.086a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5H14v-5.5A1.5 1.5 0 0 0 12.5 9h-9A1.5 1.5 0 0 0 2 10.5V16h-.5A1.5 1.5 0 0 1 0 14.5z" />
                        <path d="M3 16h10v-5.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5zm9-16H4v5.5a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5zM9 1h2v4H9z" />
                    </svg> Guardar
                </button>
            </div>
          }
         </div>
</body>
</html>
