@model BlibliotecaApp.Models.AutorModel

@{
    Layout = null;
    ViewBag.Title = "FormularioAutor";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FormularioAutor</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <h1 class="modal-title fs-5" id="exampleModalLabel">@ViewBag.Acction</h1>
        @using (Html.BeginForm("GuardarAutor", "Autor", FormMethod.Post))
        {

            <div class="mb-3">
                <label class="form-label">ID de Autor</label>
                @Html.TextBoxFor(Model => Model.id_autor, new { @class = "form-control", maxlength = "8" })
            </div>

            <div class="mb-3">
                <label class="form-label">Nombre de Autor</label>
                @Html.TextBoxFor(Model => Model.nombre_autor, new { @class = "form-control", maxlength = "64" })
            </div>

            <div class="mb-3">
                <label class="form-label">Nacionalidad de Autor</label>
                @Html.TextBoxFor(Model => Model.nacionalidad_autor, new { @class = "form-control", maxlength = "16" })
            </div>

            <div class="container text-center">
                <button type="submit" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-floppy-fill" viewBox="0 0 16 16">
                        <path d="M0 1.5A1.5 1.5 0 0 1 1.5 0H3v5.5A1.5 1.5 0 0 0 4.5 7h7A1.5 1.5 0 0 0 13 5.5V0h.086a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5H14v-5.5A1.5 1.5 0 0 0 12.5 9h-9A1.5 1.5 0 0 0 2 10.5V16h-.5A1.5 1.5 0 0 1 0 14.5z" />
                        <path d="M3 16h10v-5.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5zm9-16H4v5.5a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5zM9 1h2v4H9z" />
                    </svg> Guardar
                </button>
            </div>
        }
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
